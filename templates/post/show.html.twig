{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }} - post 
{% endblock %}

{% block body %}

	<div id="top" class="row">
		<div class="page-header">
			<h2>View post
				<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
			</h2>
		</div>

        <h3>
            {% for info in user %}
                Posted by {{ info.name }}
            {% endfor %}
        </h3>
	</div>

	<div class="row">
		<div class="col-md-6">
			<p>
				<strong>Title</strong>
			</p>
			<p>
				{{ post.title }}
			</p>

		</div>
		<div class="col-md-6">
			<p>
				<strong>Body</strong>
			</p>
			<p>
				{{ post.body }}
			</p>

		</div>
	</div>

	<hr/>

	<div class="container">
		<h3 class="text-center text-uppercase">The comments of the Post</h3>
		<table>
            <thead style="font-weight:bolder;">
                <td class="col-md-4">Name</td>
                <td class="col-md-4">Email</td>
                <td class="col-md-4">Body</td>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr class="row">
                    <td class="col-md-4">{{ comment.name }}</td>
                    <td class="col-md-4 text-center">{{ comment.email }}</td>
                    <td class="col-md-4">{{ comment.body }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
	</div>


	<div class="form-group">
		<a class="btn btn-default" href="{{ path('app_post_index') }}">
			<span class="glyphicon glyphicon-list" aria-hidden="true"></span>
			Back to list
		</a>
	</div>


{% endblock %}
